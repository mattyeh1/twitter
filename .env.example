# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Database
DATABASE_PATH=twitter_scraper.db

# Chrome Settings
HEADLESS=True
DRIVER_POOL_SIZE=3
DRIVER_TIMEOUT=300

# Celery/Redis
# Usar "localhost" para instalación local
# Usar "redis" si estás usando Docker Compose
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Scraping Settings
MAX_TWEETS_PER_SCRAPE=100
SCRAPE_SCROLL_COUNT=15
SCRAPE_SCROLL_DELAY=6

# Monitoring
ENABLE_METRICS=True

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_HOUR=100
